---
import { Image } from "astro:assets";

import Layout from "../../layouts/2026Layout.astro";

import tampahacks2026 from "../../assets/tampahacks2026.png";
import boat from "../../assets/boat.png";
import codeConstellation from "../../assets/code-constellation.png";
---

<Layout
  ogTitle="TampaHacks 2026 - high school hackathon"
  ogDesc="March 7-8, 12pm - 12pm. Make cool stuff. Free!"
>
  <main
    class="relative flex min-h-screen w-screen flex-col bg-gradient-to-b from-slate-900 via-slate-950 to-gray-900"
  >
    <div class="grid grid-cols-1 items-start md:grid-cols-2">
      <div class="flex flex-col">
        <Image src={tampahacks2026} alt="TampaHacks 2026 logo" class="pt-20" />
        <a
          href="/2026/rsvp"
          class="w-fit self-center rounded-md bg-[#005509] px-8 py-5 text-center font-display text-4xl font-bold text-white"
        >
          RSVP</a
        >
      </div>

      <div
        class="flex min-h-screen flex-col items-center justify-start py-10 md:justify-center md:py-0"
      >
        <div
          class="mx-5 flex max-w-sm flex-col gap-5 self-center rounded-lg bg-black bg-opacity-40 p-8 text-white md:max-w-3xl"
        >
          <p class="text-center text-2xl font-bold leading-relaxed md:text-3xl">
            March 7 - March 8<br />
            12pm - 12pm<br />
            Free
          </p>
          <hr class="w-full border-slate-700" />
          <p class="text-lg md:text-xl">
            <span class="text-2xl font-bold">where is it?</span><br />
            <a
              href="https://maps.app.goo.gl/1vDV6PrnDhdi7SGWA"
              class="underline">tampa hackerspace</a
            >
          </p>
          <p class="text-lg md:text-xl">
            <span class="text-2xl font-bold">what's a hackathon?</span><br />
            a hackathon is a social coding marathon where you team up to build projects
            for a weekend!
          </p>
          <p class="text-lg md:text-xl">
            <span class="text-2xl font-bold">do I need experience?</span><br />
            you don't need any experience to come to TampaHacks! we'll be running
            workshops to get you started and help you along the way. if you'd like
            to get a head start, check out <a
              href="https://guides.hackclub.com/"
              class="underline">hack club guides!</a
            >
          </p>
          <p class="text-lg md:text-xl">
            <span class="text-2xl font-bold">have more questions?</span><br />
            you can reach out to the team with any more questions at <a
              href="mailto:team@tampahacks.com"
              class="underline">team@tampahacks.com</a
            >
          </p>
        </div>
      </div>
    </div>

    <div class="absolute bottom-0 h-20 w-screen bg-[url(/waves.png)]">
      <Image
        src={boat}
        alt="Boat"
        class="absolute bottom-5 left-16 origin-bottom scale-50 md:left-96 md:scale-100"
      />
    </div>

    <div class="absolute left-[35%] top-8 scale-50 md:top-16 md:scale-100">
      <Image src={codeConstellation} alt="Constellation looking like </>" />
    </div>
  </main>
</Layout>
